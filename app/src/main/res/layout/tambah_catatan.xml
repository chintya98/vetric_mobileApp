<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Catatan.TambahCatatanFragment">

    <TextView
        android:id="@+id/tv_inJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Judul Catatan"
        android:fontFamily="@font/lato"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_inJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textSize="16sp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_inTgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tanggal Pengeluaran"
        android:fontFamily="@font/lato"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_inTgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:hint="dd/MM/yyyy"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="16sp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_inBiaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Biaya Pengeluaran"
        android:fontFamily="@font/lato"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_inBiaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textSize="16sp"
        android:inputType="number"/>

</LinearLayout>